<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>lol.szymeko</groupId>
  <artifactId>AyakashiClient</artifactId>
  <version>2.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>jitpack</id>
      <url>https://jitpack.io</url>
    </repository>
    <repository>
      <id>minecraft</id>
      <url>https://libraries.minecraft.net/</url>
    </repository>
    <repository>
      <id>okaeri-repo</id>
      <url>https://storehouse.okaeri.eu/repository/maven-public/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>net.java.jinput</groupId>
      <artifactId>jinput-platform</artifactId>
      <version>2.0.7</version>
      <type>pom</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.lwjgl.lwjgl</groupId>
      <artifactId>lwjgl-platform</artifactId>
      <version>2.9.3</version>
      <type>pom</type>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.jsoup</groupId>
      <artifactId>jsoup</artifactId>
      <version>1.15.1</version>
    </dependency>
    <dependency>
      <groupId>ViaBackwards</groupId>
      <artifactId>ViaBackwards</artifactId>
      <version>4.4.2-SNAPSHOT</version>
      <scope>system</scope>
      <systemPath>${basedir}/libs/ViaBackwards.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>ViaRewind</groupId>
      <artifactId>ViaRewind</artifactId>
      <version>2.0.3-SNAPSHOT</version>
      <scope>system</scope>
      <systemPath>${basedir}/libs/ViaRewind.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>ViaSnakeYaml</groupId>
      <artifactId>ViaSnakeYaml</artifactId>
      <version>1.30</version>
      <scope>system</scope>
      <systemPath>${basedir}/libs/ViaSnakeYaml.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>ViaVersion</groupId>
      <artifactId>ViaVersion</artifactId>
      <version>4.4.2-SNAPSHOT</version>
      <scope>system</scope>
      <systemPath>${basedir}/libs/ViaVersion.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>8</maven.compiler.target>
    <maven.compiler.source>8</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
